<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Table
        updateFinished="onRowsUpdated"
        selectionChange="onPressItem"
        mode="SingleSelectMaster"
        id="idTable"
        width="auto"
        items="{viewModel>/displayedData}"
    >
        <headerToolbar>
            <OverflowToolbar>
                <FacetFilter
                    id="idFacetFilter"
                    type="Simple"
                    showPersonalization="false"
                    liveSearch="false"
                    showReset="true"
                    reset="handleFacetFilterReset"
                    confirm="handleConfirm"
                    lists="{viewModel>/Filters}"
                >
                    <FacetFilterList
                        title="{viewModel>type}"
                        key="{viewModel>key}"
                        multiSelect="false"
                        items="{path:'viewModel>values', templateShareable: true}"
                    >
                        <FacetFilterItem
                            text="{viewModel>text}"
                            key="{viewModel>key}"
                            count="{viewModel>data}"
                        />
                    </FacetFilterList>
                </FacetFilter>
                <ToolbarSpacer />
            </OverflowToolbar>
        </headerToolbar>
        <infoToolbar>
			<OverflowToolbar>
				<Label text="{     parts: [ { path: 'viewModel>/start' },
                                 { path: 'viewModel>/end' } ],
                    formatter: '.formatter.showedNumbers' }"/>
			</OverflowToolbar>
		</infoToolbar>
        <columns>
            <Column
                hAlign="Center"
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>SnsNo}" />
            </Column>
            <Column
                hAlign="Center"
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>CikisUY}" />
            </Column>
            <Column
                hAlign="Center"
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>DepoAdi}" />
            </Column>
            <Column
                hAlign="Center"
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>SevkTarihi}" />
            </Column>
            <Column
                hAlign="Center"
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Ernam}" />
            </Column>
            <Column
                hAlign="Center"
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <Text text="{i18n>Durum}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <ObjectNumber
                        state="Error"
                        number="{viewModel>SnsNo}"
                    />
                    <ObjectNumber
                        state="Error"
                        number="{viewModel>Reswk}"
                    />
                    <ObjectNumber
                        state="Information"
                        number="{viewModel>DepoAdi}"
                    />
                    <ObjectNumber
                        state="Success"
                        number="{viewModel>SevkTarihi}"
                    />
                    <ObjectNumber
                        state="Information"
                        number="{viewModel>Ernam}"
                    />
                    <ObjectNumber
                        state="Warning"
                        number="{viewModel>Durum}"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
